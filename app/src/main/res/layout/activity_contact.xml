<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contact">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/logo"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apprentissage Academy"
            android:textColor="@color/black"
            android:textSize="10sp"
            tools:ignore="SmallSp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email@email.com"
                android:textColor="@color/black"
                android:textSize="10sp"
                tools:ignore="SmallSp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+212 6 00 00 00 00"
                android:textColor="@color/black"
                android:textSize="10sp"
                tools:ignore="SmallSp" />



        </LinearLayout>
    </LinearLayout>



        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send a email"
            android:textSize="30sp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/nameContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="name*"
            android:autofillHints=""
            tools:targetApi="o"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/emailContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/e_mail"
            android:autofillHints=""
            tools:targetApi="o"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/MessageContact"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:hint="Message"
            android:autofillHints=""
            tools:targetApi="o"
            android:inputType="text" />

        <Button
            android:id="@+id/SendMessageContact"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Message"
            android:background="@drawable/btn_style"/>



    </LinearLayout>

</ScrollView>